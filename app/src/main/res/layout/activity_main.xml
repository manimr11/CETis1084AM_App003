<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="mx.edu.cetis108.cetis1084am_app003.MainActivity">

    <TextView
        android:text="Ingresa dos números para compararlos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="23dp"
        android:id="@+id/lblInstruccion"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textStyle="normal|bold|italic"
        android:textColor="@color/colornegro"
        android:textAlignment="center" />

    <TextView
        android:text="Número 1:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lblInstruccion"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="39dp"
        android:id="@+id/lblNum1"
        android:textStyle="normal|bold"
        android:textColor="@color/colornegro" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:layout_below="@+id/lblInstruccion"
        android:layout_toRightOf="@+id/lblNum1"
        android:layout_toEndOf="@+id/lblNum1"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="28dp"
        android:id="@+id/txtNumero1"
        android:textColor="@color/colornegro" />

    <TextView
        android:text="Número 2:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtNumero1"
        android:layout_toStartOf="@+id/txtNumero1"
        android:layout_marginTop="46dp"
        android:id="@+id/textView3"
        android:textStyle="normal|bold"
        android:textColor="@color/colornegro" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/txtNumero2"
        android:layout_alignBaseline="@+id/textView3"
        android:layout_alignBottom="@+id/textView3"
        android:layout_alignLeft="@+id/txtNumero1"
        android:layout_alignStart="@+id/txtNumero1"
        android:textColor="@color/colornegro" />

    <Button
        android:text="Identificar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtNumero2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:id="@+id/btnIndentificar"
        android:onClick="btnIdentificar_onclick"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:textColor="@color/colornegro" />

    <TextView
        android:text="Resultado(s)"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnIndentificar"
        android:layout_marginTop="26dp"
        android:id="@+id/lblRes"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textAlignment="center"
        android:textStyle="normal|bold|italic"
        android:textColor="@color/colornegro" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lblRes"
        android:layout_marginTop="19dp"
        android:id="@+id/lblResultado_mayor_menor"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:textColor="@color/colorverde" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lblResultado_mayor_menor"
        android:id="@+id/lblIndicacion_suma_r"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColor="@color/colornegro"
        android:textStyle="normal|bold|italic"
        android:textAlignment="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lblIndicacion_suma_r"
        android:id="@+id/lblResultado_suma_r"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary" />


</RelativeLayout>
